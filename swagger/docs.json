  "components": {
    "schemas": {
      "page": {
        "type": "integer",
        "description": "number of the page if Pagination is used"
      },
      "size": {
        "type": "integer",
        "description": "size of the page if Pagination is used"
      },
      "sortParam": {
        "type": "string",
        "description": "parameter used to filter the data"
      },
      "sortDirection": {
        "type": "string",
        "enum": [
          "ASC",
          "DESC"
        ],
        "description": "parameter used to chose the filtering order"
      },
      "partial": {
        "type": "string",
        "description": "part of the name of the movie"
      },
      "Movie": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "Id of the movie",
            "example": 1000001
          },
          "name": {
            "type": "string",
            "description": "Name of the movie",
            "example": "Barbie"
          },
          "date": {
            "type": "integer",
            "description": "Release date of the movie",
            "example": "2024"
          },
          "tagline": {
            "type": "string",
            "description": "tagline of the movie",
            "example": ""
          },
          "description": {
            "type": "string",
            "description": "description of the movie",
            "example": ""
          },
          "minute": {
            "type": "integer",
            "description": "length of the movie in minutes",
            "example": 136
          },
          "rating": {
            "type": "number",
            "description": "rating of the movie",
            "example": 3.8
          },
          "poster": {
            "type": "string",
            "description": "link of the movie's poster",
            "example": ""
          }
        }
      },
      "Actor": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "Unique identifier for the actor",
            "example": 1
          },
          "name": {
            "type": "string",
            "description": "Name of the actor",
            "example": "Leonardo DiCaprio"
          },
          "summary": {
            "type": "string",
            "description": "Short biography or summary about the actor",
            "example": "An acclaimed actor known for his roles in Titanic and Inception."
          },
          "section": {
            "type": "string",
            "description": "Another description",
            "example": ""
          },
          "image_url": {
            "type": "string",
            "description": "URL of the actor's image",
            "example": ""
          }
        }
      },
      "Crew": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "Unique identifier for the crew member",
            "example": 1
          },
          "name": {
            "type": "string",
            "description": "Name of the crew member",
            "example": "Christopher Nolan"
          }
        }
      },
      "Release": {
        "type": "object",
        "properties": {
          "id": { "type": "integer", "description": "Release ID." },
          "name": { "type": "string", "description": "Name of the release." },
          "type": { "type": "string", "description": "Type of the release." },
          "country": { "type": "string", "description": "Country of release." },
          "rating": { "type": "number", "description": "Rating of the release." }
        }
      },
      "ReleaseList": {
        "type": "array",
        "items": { "$ref": "#/components/schemas/Release" }
      },
      "Country": {
        "type": "object",
        "properties": {
          "id": { "type": "integer", "description": "Country ID." },
          "country": { "type": "string", "description": "Name of the country." },
          "movie_count": { "type": "integer", "description": "Number of movies associated with the country." }
        }
      },
      "CountryList": {
        "type": "array",
        "items": { "$ref": "#/components/schemas/Country" }
      },
      "Studio": {
        "type": "object",
        "properties": {
          "id": { "type": "integer", "description": "ID of the studio." },
          "name": { "type": "string", "description": "Name of the studio." },
          "country": { "type": "string", "description": "Country of the studio." },
          "founded_year": { "type": "integer", "description": "Year the studio was founded." }
        }
      },
      "StudioList": {
        "type": "array",
        "items": { "$ref": "#/components/schemas/Studio" }
      },
      "NewsItem": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "Title of the news item."
          },
          "link": {
            "type": "string",
            "description": "URL to the full news article."
          },
          "description": {
            "type": "string",
            "description": "Short description or snippet of the news article."
          },
          "pubDate": {
            "type": "string",
            "format": "date",
