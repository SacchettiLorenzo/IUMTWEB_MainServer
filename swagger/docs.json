      }
    },
    "/movies/id": {
      "get": {
        "description": "Get movie by name",
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "required": true,
            "$ref": "#/components/schemas/Movie/properties/id"
          }
        ],
        "responses": {
          "200": {
            "description": "Movies were obtained",
            "content": {
              "text/html": {
