    "/movies/filter/table": {
      "get": {
        "description": "Get handlebars table component",
        "responses": {
          "200": {
            "description": "handlebars table componentwere obtained",
            "content": {
              "text/html": {
                "schema": {
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
