          {
            "name": "page",
            "in": "query",
            "required": false,
            "$ref": "#/components/schemas/page"
          },
          {
            "name": "size",
            "in": "query",
            "required": false,
            "$ref": "#/components/schemas/size"
          },
          {
            "name": "sortParam",
            "in": "query",
            "required": false,
            "$ref": "#/components/schemas/sortParam"
          },
          {
            "name": "sortDirection",
            "in": "query",
            "required": false,
            "$ref": "#/components/schemas/sortDirection"
          }
        ],
        "responses": {
          "200": {
            "description": "Movies were obtained",
            "content": {
              "text/html": {
                "schema": {
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "text/html": {
                "schema": {
                }
              }
            }
          }
        }
      }
    },
