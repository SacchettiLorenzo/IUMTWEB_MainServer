<div class="min-vh-100 container" id="movie-background">
    {{#with movie}}
        <div class="bg-dark text-white row " id="movie-container">
            <div class="col" id="movie-caption">
                <div>
                    <h1 class="col align-self-center">
                        {{name}}
                    </h1>
                    <p>
                        {{tagline}}
                    </p>
                    <p>
                        {{description}}
                    </p>
                </div>
            </div>
            <div class="col" id="movie-poster">
                <img class="" src="{{poster}}" alt="{{name}}" onerror="load_default_movie_image(this)">
            </div>
        </div>
    {{/with}}

    <div class="container" id="movie-info">
        <div class="row">
            <div class="col" id="movie-details">
                <table class="table">
                    <tbody>

                    <tr>
                        <th scope="row">Languages:</th>
                        <td>
                            {{#each languages}}
                                {{language}}{{#unless @last}}
                                , {{/unless}} <!-- Mostra tutte le lingue separate da virgola -->
                            {{else}}
                                No languages available
                            {{/each}}
                        </td>
                    </tr>
                    <tr>
                        <th scope="row">Genres:</th>
                        <td>
                            {{#each genres}}
                                {{genre}}{{#unless @last}}
                                , {{/unless}} <!-- Mostra tutti i generi separati da virgola -->
                            {{else}}
                                No genres available
                            {{/each}}
                        </td>
                    </tr>
                    <tr>
                        <th scope="row">Country:</th>
                        <td>
                            {{#each countries}}
                                {{country}}{{#unless @last}}
                                , {{/unless}} <!-- Mostra tutti i paesi separati da virgola -->
                            {{else}}
                                No countries available
                            {{/each}}
                        </td>
                    </tr>
                    <tr>
                        <th scope="row">Themes:</th>
                        <td>
                        <ul>
                            {{#each themes}}
                                <li>{{theme}}</li>
                            {{else}}
                            </ul>
                                No themes available
                            {{/each}}
                        </td>

                    </tr>
                    </tbody>
                </table>
            </div>
            <div class="col" id="movie-releases">

                {{#grouped_each 2 releases}}
                <ul class="row">
                    {{#each this}}
                        <li class="col list-group-item">
                            {{country}} {{#date_formatter date}}{{/date_formatter}}
                        </li>
                    {{/each}}
                </ul>
                {{/grouped_each}}


            </div>
        </div>
    </div>

    <div class="row mt-3" id="movie-reviews">
        {{> reviews_card}}
    </div>

    <div class="row mt-3" id="movie-actors">
        {{> actors_card}}
    </div>

    similar movies
</div>

