<div class="album py-1 bg-body-secondary vh-100  overflow-auto ">
    <div class="container ">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-5 g-3 ">
            {{#each movies}}
                <div class="col">
                    <div class="card shadow-sm ">
                        <img class="card-img-top rounded-top img-fluid" src="{{movie_poster}}" alt="{{movie_name}}" height="auto">
                        <div class="card-body">
                            <h5 class="card-title">{{movie_name}}</h5>
                            <p class="card-text">{{movie_description}}</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-body-secondary">{{movie_date}}</small>
                            </div>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>

    </div>
</div>
