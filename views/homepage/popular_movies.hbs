<section id="popular-movies" class="container mt-5">
    <h2>Popular Movies by Year</h2>
    <div class="row">
        <!-- Colonna per il grafico -->
        <div class="col-md-8">
            <canvas id="popularMoviesChart" width="400" height="300"></canvas>
        </div>
        <!-- Colonna per i dettagli -->
        <div class="col-md-4">
            <div id="movieDetails" class="card" style="display: none;">
                <img id="moviePoster" src="" class="card-img-top" alt="Movie Poster">
                <div class="card-body">
                    <h5 id="movieTitle" class="card-title"></h5>
                    <p id="movieDescription" class="card-text"></p>
                    <p id="movieRating" class="card-text"><strong>Rating:</strong> <span></span></p>
                </div>
            </div>
        </div>
    </div>
</section>