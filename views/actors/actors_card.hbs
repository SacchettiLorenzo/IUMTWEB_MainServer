<div class="container">
    {{#grouped_each 4 actors}}
        <div class="row justify-content-evenly">
            {{#each this}}
                <div class="card col" style="border-radius: 15px;" id="actor-card">
                    <div class="card-body p-4">
                        <div class="d-flex">
                            <div class="flex-shrink-0">
                                <img src="{{imageUrl}}"
                                     alt="{{name}}" style="width: 180px; border-radius: 10px;"
                                     onerror="load_default_actor_image(this)">
                            </div>
                            <div class="flex-grow-1 ms-3 ">
                                <h5 class="mb-1">{{name}}</h5>
                                <p class="small text-muted mb-1">Id: {{id}}</p>
                                <div class="d-flex justify-content-start rounded-3 p-2 mb-2 bg-body-tertiary">
                                    <p class="small text-muted mb-1 overflow-y-scroll "
                                       style="max-height: 150px">{{summary}}</p>
                                </div>
                                <div class="d-flex pt-1">
                                    <button type="button" data-mdb-button-init data-mdb-ripple-init
                                            class="btn btn-primary flex-grow-1"
                                            onclick="location.href='/actors/id?id={{id}}'">
                                    Show More
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    {{/grouped_each}}
</div>




