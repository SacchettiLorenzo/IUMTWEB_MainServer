<div class="container">
    {{#grouped_each 4 actors}}
        <div class="row g-4 justify-content-center mt-2">
            {{#each this}}
                <div class="col-lg-3 col-md-6 col-sm-12  justify-content-center">
                    <div class="card shadow-sm text-center" style="border-radius: 15px; max-width: 280px;" id="actor-card">
                        <!-- Immagine -->
                        <img src="{{imageUrl}}" alt="{{name}}" class="card-img-top mx-auto object-fit-scale"
                             style="height: 250px; object-fit: cover; border-radius: 15px 15px 0 0;"
                             onerror="load_default_actor_image(this)">
                        <!-- Corpo della Card -->
                        <div class="card-body">
                            <h5 class="card-title">{{name}}</h5>
                            <button type="button" class="btn btn-primary btn-sm"
                                    onclick="location.href='/actors/id?id={{id}}'">
                            Show More
                            </button>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    {{/grouped_each}}
</div>


