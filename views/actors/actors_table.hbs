<table class="table table-striped table-hover table-condensed table-bordered table-responsive" id="actors_table">
    <tr>
        <th scope="col">Id</th>
        <th scope="col">Name</th>
        <th scope="col">Summary</th>
        <th scope="col">Section</th>
        <th scope="col">Image</th>
    </tr>
    {{#each actors}}
        <tr>
            <th scope="row">{{id}}</th>
            <td><a href="/actors/id?id={{id}}">{{name}}</a></td>
            <td>{{summary}}</td>
            <td>{{section}}</td>
            <td>{{image_url}}</td>
        </tr>
    {{/each}}
</table>