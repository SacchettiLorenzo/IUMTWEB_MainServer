<div class="container mt-4">
    <h1>Top 10 Countries</h1>

    <!-- Tabella -->
    <table class="table table-striped table-bordered">
        <thead>
        <tr>
            <th>Position</th>
            <th>Country</th>
            <th>Number of Movies</th>
        </tr>
        </thead>
        <tbody>
        {{#each countries}}
            <tr data-country="{{country}}" data-index="{{@index}}">
                <td>{{@index}}</td>
                <td>{{country}}</td>
                <td>{{movie_count}}</td>
            </tr>
        {{/each}}
        </tbody>
    </table>

    <h1>Top 10 countries chart</h1>
    <canvas id="popularCountriesChart" width="100" height="100"></canvas>
</div>
