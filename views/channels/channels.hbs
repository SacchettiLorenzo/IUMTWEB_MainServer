<!DOCTYPE html>
<html>
<head>
    <title>Channels</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
<div class="container mt-5">
    <h2>Join a Channel</h2>
    <form id="channelForm" method="get" action="/chat" onsubmit="return validateEntity(event)">
        <div class="mb-3">
            <label for="topic" class="form-label">Select a Topic:</label>
            <select id="topic" name="topic" class="form-select" onchange="toggleFields()" required>
                <option value="" disabled selected>Choose...</option>
                <option value="actors">Actors</option>
                <option value="movies">Movies</option>
            </select>
        </div>

        <!-- Campo per scegliere un film -->
        <div id="movieField" class="mb-3" style="display: none; position: relative;">
            <label for="movieTitle" class="form-label">Movie Title:</label>
            <input type="text" id="movieTitle" name="movieTitle" class="form-control">
            <div id="movieSuggestions" class="list-group position-absolute w-100" style="z-index: 1000;"></div>
            <!-- Aggiungi questo per il messaggio di validazione -->
            <small id="movieValidationMessage" class="text-danger"></small>
        </div>

        <!-- Campo per scegliere un attore -->
        <div id="actorField" class="mb-3" style="display: none; position: relative;">
            <label for="actorName" class="form-label">Actor Name:</label>
            <input type="text" id="actorName" name="actorName" class="form-control">
            <div id="actorSuggestions" class="list-group position-absolute w-100" style="z-index: 1000;"></div>
            <!-- Aggiungi questo per il messaggio di validazione -->
            <small id="actorValidationMessage" class="text-danger"></small>
        </div>

        <button type="submit" class="btn btn-primary">Join Channel</button>
    </form>
</div>

<script src="/public/javascripts/channels.js"></script>
</body>
</html>