<div class="container">
    {{#grouped_each 2 reviews}}
        <div class="row justify-content-evenly">
            {{#each this}}
                <div class="col bg-white border shadow-lg p-2" id="review-card">
                    <div class="container">
                        <div class="row">
                            <h6 class="col"> {{critic_name}}</h6>
                            {{#when ../../title 'eq' 'Home'}}
                                <h6 class="col" ><a href='/movies/name?partial={{movie_title}}&only_data=false'>{{movie_title}}</a></h6>
                            {{/when}}

                            {{#if top_critic}}
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                     class="bi bi-star-fill col" viewBox="0 0 16 16">
                                    <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
                                </svg>
                            {{/if}}
                        </div>
                        <p>{{review_content}}</p>
                        <div class="row align-items-end">
                            <p class="col">From: {{publisher_name}}</p>
                            <p class="col">{{#date_formatter review_date}}{{/date_formatter}}</p>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    {{/grouped_each}}
</div>